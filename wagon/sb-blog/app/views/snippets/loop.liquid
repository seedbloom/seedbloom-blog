{% if author.posts %}
   {% assign posts = author.posts %}
{% else %}
   {% assign posts = contents.posts %}
{% endif %}
{% for post in posts %}
    <article class="post clearfix">
      {% if post.featured_image.url %}
        <div class="post-image">
          <div class="img"
               style="background: url({{ post.featured_image.url | resize: '1920x1200' }});background-position: center center;background-repeat: no-repeat;background-size: cover;">
            <div class="overlay"></div>
            <div class="col-xs-12 col-md-9">
              <header class="post-header">
                <h2 class="post-title"><a href="{{ locale }}/posts/{{ post._slug }}">{{ post.title | escape }}</a></h2>
              </header>
              <section class="post-excerpt">
                <div class="teaser">{{ post.teaser }}</div> <p>{{ 'read_more' | translate }} <a class="read-more" href="{{url}}">&raquo;</a></p>
              </section>
            </div>
            <div class="col-xs-12 col-md-3">
              <section class="post-meta">
                {% if post.tags %}
                  <p class="tags">
                    <a href="{{ locale }}/tags/{{ post.tags | first | escape | downcase }}">{{ post.tags | first | escape }}</a>
                  </p>
                {% endif %}
              </section>
            </div>
          </div>
        </div>
      {% endif %}
      <footer class="hide post-meta">
        {{#if author.image}}
          <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin"/>{{/if}}
        {{author}}
        {{tags prefix=" on "}}
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
      </footer>
      <hr/>
    </article>
{% endfor %}
